@model EntityLayer.Concrete.Skills

@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card mb-4">
        <h5 class="card-header">Deneyim Düzenleme Paneli</h5>
        <div class="card-body">
            <form class="forms-sample" method="post">
                <div class="mb-3 row">
                    <label for="html5-text-input" class="col-md-2 col-form-label">ID</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.SkillsID, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="html5-text-input" class="col-md-2 col-form-label">Yetenek Başlığı</label>
                    <div class="col-md-10">
                        @Html.DropDownListFor(x => x.Name, new SelectList(new List<string> { "fab fa-html5", "fab fa-css3-alt", "fab fa-react", "fab fa-wordpress", "fab fa-npm", "fa fa-linux", "fa fa-wordpress", "fa fa-git", "fa fa-windows" }), new { @class = "form-control" })
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="html5-email-input" class="col-md-2 col-form-label">Açıklama</label>
                    <div class="col-md-10">
                        @Html.TextAreaFor(x => x.ExperienceDescription, 4, 3, new { @class = "form-control" })
                    </div>
                </div>
                <div class="button-class" style="margin-top: 30px">
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Index", "Skill")'">İptal</button>
                </div>
            </form>
        </div>
    </div>
</div>