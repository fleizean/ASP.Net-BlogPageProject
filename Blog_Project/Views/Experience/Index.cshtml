@using EntityLayer.Concrete
@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Meslek</th>
                        <th>İşyeri</th>
                        <th>Tarih</th>
                        <th>Açıklama</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong></strong>@item.ExperienceID</td>
                            <td>@item.JobTitle</td>
                            <td>@item.WorkPlace</td>
                            <td>@item.Date</td>
                            @if (item.Description.Length > 10)
                            {
                                <td>@item.Description.Substring(0, 10)...</td>
                            }
                            else
                            {
                                <td>@item.Description</td>
                            }
                            <td><a href="/Experience/DeleteExperience/@item.ExperienceID" class="btn btn-outline-danger" onclick="return confirm('Gerçekten silmek istiyor musunuz?')"><span class="tf-icons bx bx-error-alt"></span>&nbsp; Sil</a></td>
                            <td><a href="/Experience/EditExperience/@item.ExperienceID" class="btn btn-outline-success"><span class="tf-icons bx bx-pencil"></span>&nbsp; Güncelle</a></td>

                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

    <br />
    <div style="text-align: left;">
        <a href="/Experience/AddExperience/" class="btn btn-outline-info">
            <span class="tf-icons bx bx-clipboard"></span>&nbsp; Deneyim Ekle
        </a>
    </div>
</div>
